using namespace std;
#include<iostream>

#include<cstdio>

int main()
{
	int n,k;
	while (scanf("%d",&n) != EOF)
	{
		int a[100005] = {0}, ans[100005] = {0};
		for (int i = 0; i < n; i++)
		{
			scanf("%d",&k);
			a[k]++;
		}
		ans[1] = a[1];
		for (int i = 2; i <= 100000; i++)
			//ans[i] = (ans[i-1]>?ans[i-2]+a[i]*i);
		cout << ans[100000] << endl;
	}
	return 0;
}
